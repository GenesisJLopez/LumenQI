<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
    <key>CFBundleDisplayName</key>
    <string>Lumen QI</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>com.lumen.qi</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>$(PRODUCT_NAME)</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(MARKETING_VERSION)</string>
    <key>CFBundleVersion</key>
    <string>$(CURRENT_PROJECT_VERSION)</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>
    <key>UIMainStoryboardFile</key>
    <string>Main</string>
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>armv7</string>
    </array>
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <true/>
    
    <!-- Privacy Usage Descriptions -->
    <key>NSMicrophoneUsageDescription</key>
    <string>Lumen QI needs microphone access for voice commands and natural conversation</string>
    <key>NSCameraUsageDescription</key>
    <string>Lumen QI needs camera access for visual analysis and enhanced interaction</string>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Lumen QI uses location for contextual assistance and calendar integration</string>
    <key>NSCalendarsUsageDescription</key>
    <string>Lumen QI integrates with your calendar to provide proactive reminders and scheduling assistance</string>
    <key>NSContactsUsageDescription</key>
    <string>Lumen QI accesses contacts for enhanced calendar and communication features</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Lumen QI can analyze photos to provide visual assistance and context</string>
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>Lumen QI uses speech recognition for natural voice conversations</string>
    <key>NSUserNotificationsUsageDescription</key>
    <string>Lumen QI sends proactive notifications and reminders as your AI assistant</string>
    
    <!-- Background Modes -->
    <key>UIBackgroundModes</key>
    <array>
        <string>background-audio</string>
        <string>background-processing</string>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>
    
    <!-- URL Schemes -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.lumen.qi</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>lumen</string>
                <string>lumenqi</string>
            </array>
        </dict>
    </array>
    
    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <key>NSAllowsLocalNetworking</key>
        <true/>
    </dict>
    
    <!-- Intent Extensions -->
    <key>NSSupportsLiveActivities</key>
    <true/>
    <key>NSSupportsUniversalLinks</key>
    <true/>
</dict>
</plist>